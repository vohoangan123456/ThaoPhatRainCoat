@model ThaoPhatRainCoat.Models.ShopModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-app="appLoginPage" ng-controller="loginController" ng-init="init()" id="loginController">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>Login page</h1>
            </div>
        </div>

        <form ng-submit="formSubmit()" class="form">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="username" placeholder="username" required="" />
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" ng-model="password" placeholder="password" required="" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                    <span class="text-danger" ng-show="error.length > 0">{{ error }}</span>
                </div>

            </div>
        </form>

    </div>
</div>
@section scripts{
    <script src="~/Scripts/Apps/controllers/login.controller.js"></script>
    <script src="~/Scripts/Apps/services/login.services.js"></script>
}

